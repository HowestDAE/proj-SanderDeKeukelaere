<Window x:Class="Project_TF2ItemList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_TF2ItemList"
        xmlns:view="clr-namespace:Project_TF2ItemList.View"
        mc:Ignorable="d"
        Title="MainWindow" Width="1475" Height="720">

    <Window.Resources>
        <view:ItemInspection x:Key="OverviewPage"/>

        <FontFamily x:Key="TF2Font">pack://application:,,,/Resources/Fonts/#TF2 Build</FontFamily>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Frame NavigationUIVisibility="Hidden" Content="{StaticResource OverviewPage}"/>

        <Button Grid.Row="1" 
                FontFamily="{StaticResource TF2Font}"
                FontSize="20"
                Foreground="#F1EFED"
                Background="#3C352E">
            INSPECT ITEM
        </Button>
    </Grid>
</Window>
